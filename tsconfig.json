{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@node_modules/*": ["../node_modules/*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@guards/*": ["guards/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@pipes/*": ["pipes/*"],
      "@services/*": ["services/*"],
      "@util/*": ["util/*"]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
